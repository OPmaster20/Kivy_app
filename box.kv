<init_box>:
    BoxLayout:
        name:"main"
        id:box_id
        orientation:'vertical'
        size:200,300
        canvas:
            Rectangle:
                source:'pink.png'
                size:self.size
                pos:self.pos
        Label:
            text:"Welcome to my software"
            id:label_id
            font_size:"40sp"
            color:[1, 1, 1, 1]
            bold:True
        Label:
            text:"0"
            id:count_id
            font_size:"15sp"
            color:[1, 1, 1, 1]
        Button:
            id:but1
            text:"Enter our world"
            size_hint:.3,.90
            pos:215,300
            opacity:0
            disabled:True
            on_press:root.manager.current = 'sub1'
            border:30,30,30,30
            pos_hint: {'center_x':0.5, 'center_y': 0.5}
            background_normal:"b1.png"
        ProgressBar:
            value:0
            id:pd_id
            max:100
            run_pd:root.up()
            size_hint:(.5, 1)
            pos_hint: {'center_x':0.5, 'center_y': 0.5}


<register_user>:
    GridLayout:
        name:"register"
        id:re_box
        canvas:
            Rectangle:
                source:'pink.png'
                size:self.size
                pos:self.pos
            RoundedRectangle:
                source:'a6.png'
                size:400,400
                pos:self.pos
                radius:[(5, 5), (5, 5), (5, 5), (5, 5)]

        canvas.after:
            Rectangle:
                source:root.code_file_name
                size:250,100
                pos:250,80
        GridLayout:
            cols:1
            size:250,500
            pos: 250,200
            Label:
                text:"New username"
                font_size:"25sp"
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
            TextInput:
                id:register_username
                multiline:False
                size:100,200
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_normal:"border1.png"
                background_active:"border1.png"
                fit_mode:'fill'

            Label:
                text:"New password"
                font_size:"25sp"
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
            TextInput:
                id:register_password
                multiline:False
                size:100,200
                password:True
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_normal:"border1.png"
                background_active:"border1.png"
                fit_mode:'fill'

            Label:
                text:"Confirm new password"
                font_size:"25sp"
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
            TextInput:
                id:confirm_password
                multiline:False
                size:100,200
                password:True
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_normal:"border1.png"
                background_active:"border1.png"
                fit_mode:'fill'


            Label:
                text:"e-mail address"
                font_size:"25sp"
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
            TextInput:
                id:register_email
                multiline:False
                size:100,200
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_normal:"border1.png"
                background_active:"border1.png"
                fit_mode:'fill'

            Label:
                text:"Verification code"
                font_size:"25sp"
                pos_hint: {'center_x':0.5, 'center_y': 0.5}

            TextInput:
                id:vcode
                multiline:False
                size:100,200
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_normal:"border1.png"
                background_active:"border1.png"
                fit_mode:'fill'

        GridLayout:
            cols:1
            size:250,200
            pos: 660,250
            Button:
                text:"Log in"
                size:100,300
                pos:215,300
                font_size:"25sp"
                on_press:root.proof()
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_normal:"b2.png"
            Button:
                text:"Back"
                size:100,300
                pos:215,300
                font_size:"25sp"
                on_press:root.manager.current = 'sub1'
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                background_normal:"b2.png"




